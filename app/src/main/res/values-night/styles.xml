<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/color100Grey</item>
    </style>

    <!-- Toolbar theme. -->
    <style name="ToolbarTheme" parent="Widget.AppCompat.Toolbar">
        <!-- Customize your theme here. -->
        <item name="android:background">@color/color100Grey</item>
        <item name="android:contentInsetStart">0dp</item>
        <item name="android:titleTextAppearance">@style/ToolbarTitleStyle</item>
    </style>

    <!-- Toolbar Title style. -->
    <style name="ToolbarTitleStyle" parent="TextAppearance.AppCompat.Widget.ActionBar.Menu">
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/colorPrimary</item>
    </style>
</resources>